{{!
    @template mod_booking/col_availableplaces

    Classes required for JS:
    * none

    Example context (json):
    {
        "maxanswers" : {
            "booked" : "3",
            "maxanswers": "5"
        }
    }
}}
{{#showmanageresponses}}
<a href="{{{manageresponsesurl}}}" style="text-decoration: none;">
{{/showmanageresponses}}

{{! Booking places }}
{{#maxanswers}}
    <span class="col-ap-availableplaces {{#bookingplacesclass}}{{.}}{{/bookingplacesclass}}">
        {{^showbookingplacesinfotext}}
            {{#fullybooked}}
                <span class="text-danger font-weight-bold">{{booked}}</span>
            {{/fullybooked}}
            {{^fullybooked}}
                <span class="text-success font-weight-bold">{{booked}}</span>
            {{/fullybooked}}
                / {{maxanswers}}
        {{/showbookingplacesinfotext}}
        {{#showbookingplacesinfotext}}
            {{bookingplacesinfotext}}
        {{/showbookingplacesinfotext}}
    </span>
{{/maxanswers}}
{{^maxanswers}}
    <span class="text-success font-weight-bold">{{booked}}</span>
            / {{#str}} unlimitedplaces, mod_booking {{/str}}
{{/maxanswers}}

{{! Waiting list places }}
{{#maxoverbooking}}
    <span class="col-ap-waitingplacesavailable {{#waitinglistplacesclass}}{{.}}{{/waitinglistplacesclass}}">
        {{^showwaitinglistplacesinfotext}}
            ({{#str}} waitinglist, mod_booking {{/str}}: {{waiting}}/{{maxoverbooking}})
        {{/showwaitinglistplacesinfotext}}
        {{#showwaitinglistplacesinfotext}}
            {{waitinglistplacesinfotext}}
        {{/showwaitinglistplacesinfotext}}
    </span>
{{/maxoverbooking}}

{{#showmanageresponses}}
</a>
{{/showmanageresponses}}