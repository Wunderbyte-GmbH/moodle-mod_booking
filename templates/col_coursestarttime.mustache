{{!
    @template mod_booking/col_coursestarttime

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region

    Example context (json):
    {
        "showcollapsebtn" : true,
        "optionid" : "1",
        "datestrings" : [
            {
                "key" : [
                    {
                        "datestring" : "3 March 2023, 10:30 AM - 11:45 AM"
                    }
                ]
            }
        ]
    }
}}

{{#showcollapsebtn}}
    <div class='booking-showdates-collapse mt-1'>
        <span>
            <i class="fa fa-calendar fa-fw" aria-hidden="true"></i>
        </span>
        <span>
            <a
                data-toggle="collapse"
                data-bs-toggle="collapse"
                href="#optiondates{{{optionid}}}"
                role="button"
                aria-expanded="false"
                aria-controls="optiondates{{{optionid}}}">
                {{#str}}showdates, mod_booking{{/str}}
            </a>
        </span>
    </div>
    <div class="collapse" id="optiondates{{{optionid}}}">
        {{#datestrings}}
            <div>{{{datestring}}}</div>
        {{/datestrings}}
    </div>
{{/showcollapsebtn}}
{{^showcollapsebtn}}
    <div id="optiondates{{{optionid}}}">
        <div class='booking-showdates-title mt-1'>
            <span>
                <i class="fa fa-calendar fa-fw" aria-hidden="true"></i>
            </span>
            <span><b>{{#str}} date_s, mod_booking {{/str}}:</b></span>
        </div>
        {{#datestrings}}
            <div>{{{datestring}}}</div>
        {{/datestrings}}
    </div>
{{/showcollapsebtn}}
{{^datestrings}}
    {{#str}}datenotset, mod_booking{{/str}}
{{/datestrings}}