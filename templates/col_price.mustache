{{!
    @template mod_booking/col_price

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region

     Example context (json):
    {
        "itemname" : "myitem",
        "price" : "10",
        "currency" : "EUR",
        "componentname" : "local_shoppingcart",
        "description" : "description",
        "imageurl" : "https://mypic.jpg",
        "pricecategoryidentifier" : "categoryid",
        "pricecategoryname" : "student"
    }
}}
{{#price}}
    <table class="pricecurrency font-weight-bold w-100">
        <tr>
            <td class="text-center">{{price}} {{currency}}
            </td>
        </tr>
    </table>
<div>{{> local_shopping_cart/addtocartdb }}</div>
{{#priceitems}}
{{/priceitems}}
{{/price}}
{{^price}}
    {{#showbutton}}
        <a href="/login/index.php" class="btn btn-{{buttonstyle}}">{{#str}}bocondisloggedinnotavailable, mod_booking{{/str}}</a>
    {{/showbutton}}
    <div class="allprices ml-5 mt-3">
    {{#priceitems}}
        <div class="pricecurrency"> {{price}} {{currency}} <i>{{pricecategoryname}}</i></div>
    {{/priceitems}}
    </div>
{{/price}}