{{!
    @template mod_booking/recalculateprices

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region

    Example context (json):
    {
        "cmid" :7,
        "back" : "http://site/mod/booking/view.php?id=7",
        "continue" : "http://site/mod/booking/recalculateprices.php?id=7&submit=1",
        "alert" : 0,
        "alertmsg" : "Caution! All prices will be recalculated and all old prices will be overwritten."
    }
}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{{alertmsg}}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<a href="{{back}}" id="btn-booking-recalculateprices" class="btn btn-danger">  {{#str}} cancel, core {{/str}}
</a>
{{^alert}}
<a href="{{continue}}" id="btn-booking-recalculateprices-success" class="btn btn-success">  {{#str}} recalculateall, mod_booking {{/str}}
</a>
{{/alert}}
