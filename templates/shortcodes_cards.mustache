{{!
    @template mod_booking/table
    Template which defines a mooduell view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    * statistics - array: An array with values.
    * opengames - array: empty array, will be filled with JS.
    * finishedgames - array: empty array, will be filled with JS.
    * highscores - array: empty array, will be filled with JS.

    Example context (json):
    {
       "listheaderclass" : "listheaderclass",
       "cardheaderclass" : "cardheaderclass",
       "cardfooterclass" : "cardfooterclass",
       "cardimageclass" : "cardimageclass",
       "cardheader": [
            "columnclass" : "columnclass",
            "columnkeyclass" : "columnkeyclass",
            "key" : "columnname",
            "keystring" : "localized column name",
            "columnvalueclass" : "columnvalueclass"
            "value" : "value"
       ],
       "cardbody": [
            "columnclass" : "columnclass",
            "columnkeyclass" : "columnkeyclass",
            "key" : "columnname",
            "keystring" : "localized column name",
            "columnvalueclass" : "columnvalueclass"
            "value" : "value"
       ],
       "cardfooter": [
            "columnclass" : "columnclass",
            "columnkeyclass" : "columnkeyclass",
            "key" : "columnname",
            "keystring" : "localized column name",
            "columnvalueclass" : "columnvalueclass"
            "value" : "value"
       ],
       "cardimage": [
            "value" : "value"
       ]
    }
}}

{{> local_wunderbyte_table/pagination }}

{{#table}}

<div class="no-overflow">
<ul class="wunderbyte-table-grid">
 {{#rows}}
    <div class="list-group-item wunderbyteTableJavascript">
        <div class="{{cardimageclass}}">
          {{#cardimage}}
            <img class="w-100" src="{{{value}}}">
          {{/cardimage}}
        </div>

        <div class="{{cardbodyclass}}">
          {{#cardbody}}
            {{#columnclass}}<div class="{{.}} {{key}}">{{/columnclass}}
                  <span {{^value}} style="display:none" {{/value}}>
                  {{#columniclassbefore}}
                    <i class="{{.}}" aria-hidden="true"></i>
                  {{/columniclassbefore}}
                  </span>
                  {{#columnkeyclass}}<span class="key {{.}}">{{/columnkeyclass}}
                    {{^keystring}}
                   {{{key}}}
                  {{/keystring}}
                  {{#keystring}}
                    {{.}}
                  {{/keystring}}:
                  {{#columnkeyclass}}</span>{{/columnkeyclass}}
                  <span {{^value}} style="display:none" {{/value}} class="{{columnvalueclass}} {{key}}">
                    {{{value}}}
                    {{#columnvalueclass}}</span>{{/columnvalueclass}}
                  <span {{^value}} style="display:none" {{/value}}>
                  {{#columniclassafter}}
                    <i class="value {{.}}" aria-hidden="true"></i>
                  {{/columniclassafter}}
                  </span>
            {{#columnclass}}</div>{{/columnclass}}
          {{/cardbody}}
        </div>
        <div class="course-card-footer">
          <div class="{{cardlistclass}}">
            <ul class="infolist">
            {{#cardlist}}
              <li>
              {{#columnclass}}<div class="{{.}} {{key}}">{{/columnclass}}
                    <span {{^value}} style="display:none" {{/value}}>
                    {{#columniclassbefore}}
                      <i class="{{.}}" aria-hidden="true"></i>
                    {{/columniclassbefore}}
                    </span>
                    {{#columnkeyclass}}<span class="key {{.}}">{{/columnkeyclass}}
                      {{^keystring}}
                    {{{key}}}
                    {{/keystring}}
                    {{#keystring}}
                      {{.}}
                    {{/keystring}}:
                    {{#columnkeyclass}}</span>{{/columnkeyclass}}
                    <span {{^value}} style="display:none" {{/value}} class="{{columnvalueclass}} {{key}}">
                      {{{value}}}
                      {{#columnvalueclass}}</span>{{/columnvalueclass}}
                    <span {{^value}} style="display:none" {{/value}}>
                    {{#columniclassafter}}
                      <i class="value {{.}}" aria-hidden="true"></i>
                    {{/columniclassafter}}
                    </span>
              {{#columnclass}}</div>{{/columnclass}}
              </li>
            {{/cardlist}}
            </ul>
          </div>
          <div>
            {{#cardfooter}}
              {{#columnclass}}<div class="{{.}} {{key}}">{{/columnclass}}
                    <span {{^value}} style="display:none" {{/value}}>
                    {{#columniclassbefore}}
                      <i class="{{.}}" aria-hidden="true"></i>
                    {{/columniclassbefore}}
                    </span>
                    {{#columnkeyclass}}<span class="key {{.}}">{{/columnkeyclass}}
                      {{^keystring}}
                    {{{key}}}
                    {{/keystring}}
                    {{#keystring}}
                      {{.}}
                    {{/keystring}}:
                    {{#columnkeyclass}}</span>{{/columnkeyclass}}
                    <span {{^value}} style="display:none" {{/value}} class="{{columnvalueclass}} {{key}}">
                      {{{value}}}
                      {{#columnvalueclass}}</span>{{/columnvalueclass}}
                    <span {{^value}} style="display:none" {{/value}}>
                    {{#columniclassafter}}
                      <i class="value {{.}}" aria-hidden="true"></i>
                    {{/columniclassafter}}
                    </span>
              {{#columnclass}}</div>{{/columnclass}}
            {{/cardfooter}}
          </div>
        </div>
    </div>
     {{/rows}}
</ul>
</div>

{{/table}}

{{> local_wunderbyte_table/pagination }}


{{#js}}
    require(['local_wunderbyte_table/init'], function(init) {
    init.init('{{idstring}}', '{{encodedtable}}');
    });
    require(['local_shopping_cart/cart'], function(cart) {
    cart.buttoninit(null, 'mod_booking');
    });
    require(['mod_booking/modal_init'], function(init) {
    init.init();
    });
{{/js}}