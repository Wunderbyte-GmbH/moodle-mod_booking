<div class="chart-container" style="position: relative; height:400px; width:100%;">
    <canvas id="booking-performance-chart"></canvas>
</div>

{{! Put the chart data into the DOM as JSON (safe for JS to read) }}
<script type="application/json" id="booking-performance-chart-data">
    {
        "labelsjson": {{{chart.labelsjson}}},
        "datasetsjson": {{{chart.datasetsjson}}},
        "notesjson": {{{chart.notesjson}}}
    }
</script>

{{! Load an AMD module that will render the chart }}
{{#js}}
    require(['mod_booking/performance_chart'], function(chart) {
        chart.init('booking-performance-chart', 'booking-performance-chart-data');
    });
{{/js}}