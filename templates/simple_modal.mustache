{{!
    @template mod_booking/simple_modal

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region

    Example context (json):
    {
        "modalcounter": 3,
        "modaltitle" : "My Modal",
        "description": "<b>My Text</b>",
    }
}}
<a href="#" data-toggle="modal" data-target="#simpleModal{{modalcounter}}">
    <h5><i class="fa fa-info-circle"></i> {{modaltitle}}</h5>
</a>
<div class="modal fade" id="simpleModal{{modalcounter}}" tabindex="-1" role="dialog"
    aria-labelledby="simpleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <p>
                    <div>
                        {{{description}}}
                    </div>
                </p>
            </div>
        </div>
    </div>
</div>