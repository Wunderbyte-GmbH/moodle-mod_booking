{{!
    @template mod_booking/bookingoption_description_mail

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region
}}

<h4>{{#titleprefix}}{{.}} - {{/titleprefix}}{{title}}</h4>
{{#location}}{{#str}} location, mod_booking {{/str}}: {{.}}<br>{{/location}}
{{#institution}}{{#str}} institution, mod_booking {{/str}}: {{.}}<br>{{/institution}}
{{#address}}{{#str}} address, mod_booking {{/str}}:  {{.}}<br>{{/address}}
{{#statusdescription}}<p>{{{.}}}</p>{{/statusdescription}}
{{#description}}<p>{{{.}}}</p>{{/description}}
<div {{^teachers}} style="display:none"{{/teachers}}>
    <br>
    <b>{{#str}} teachers, mod_booking {{/str}}:</b>
    <ul>
        {{#teachers}}
            <li>
                {{.}}
            </li>
        {{/teachers}}
    </ul>
</div>
<div {{^dates}} style="display:none"{{/dates}}>
    <b>{{#str}} sessions, mod_booking {{/str}}:</b>
    <ul>
        {{#dates}}
            <li>{{{datestring}}}</li>
            <ul>
                {{#customfields}}
                    <li>
                        {{name}}{{{value}}}
                    </li>
                {{/customfields}}
            </ul>
        {{/dates}}
    </ul>
</div>
<br>
{{#booknowbutton}}{{{.}}}{{/booknowbutton}}