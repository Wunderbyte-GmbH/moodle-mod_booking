{{!
    @template mod_booking/optiondates_only

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region

    Example context (json):
    {
        "showsessions" : true,
        "onesession" : false,
        "sessions" : [
            {
                "key" : [
                    {
                        "starttime" : "3 March 2023, 10:30 AM",
                        "endtime" : "3 March 2023, 11:45 AM"
                    }
                ]
            }
        ]
    }
}}
{{#showsessions}}
    <ul>
        {{#dates}}
                <li>
                    <div>
                        <b>{{{datestring}}}</b>
                        {{#entitylink}}
                            <div class="entity-for-optiondate-area">
                                <i class="fa fa-fw fa-map-marker" aria-hidden="true"></i>&nbsp;{{{.}}}
                            </div>
                        {{/entitylink}}
                    </div>
                    <div {{^customfields}}style="display:none"{{/customfields}}>
                        {{#customfields}}
                            <div>
                                {{name}}{{{value}}}
                            </div>
                        {{/customfields}}
                    </div>
                </li>
        {{/dates}}
    </ul>
{{/showsessions}}
