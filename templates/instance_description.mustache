{{!
    @template mod_booking/instance_description

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region

    Example context (json):
    {
        "organizatorname": "organizator name",
        "description": "This is a description of the event.",
        "duration": "2 hours",
        "points": 5
    }
}}

<div class='container' id='booking-instance-description'>
    {{#description}}
    <div>
        <p>{{{description}}}</p>
    </div>
    {{/description}}
    {{#organizatorname}}
        <div>
            <p><b>{{#str}} organizatorname, mod_booking {{/str}}:</b> {{{organizatorname}}}</p>
        </div>
    {{/organizatorname}}
    {{#duration}}
        <div>
            <p><b>{{#str}} eventduration, mod_booking {{/str}}:</b> {{{duration}}}</p>
        </div>
    {{/duration}}
    {{#points}}
        <div>
            <p><b>{{#str}} eventpoints, mod_booking {{/str}}:</b> {{{points}}}</p>
        </div>
    {{/points}}
</div>
