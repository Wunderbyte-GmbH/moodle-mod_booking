{{!
    @template mod_booking/business_card

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region
}}
<div class='list-group bookingoptions'>
{{#bookingoptions}}
        <a class="list-group-item list-group-item-action" href={{linktooption}}>
            <div class="d-flex w-100 justify-content-between">
                  <h5 class="mb-1">{{bookingoptionname}}</h5>
                    <div>
                      {{{button}}}
                    </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-2"></div>
                    <div>
                        {{#dates}}
                            <small><p class="mb-1">{{{datestring}}}</p></small>
                        {{/dates}}
                    </div>
                </div>
            </div>
        </a>
{{/bookingoptions}}
</div>