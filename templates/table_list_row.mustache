{{!
    @template mod_booking/table_list_row
    Template which defines a mooduell view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    * statistics - array: An array with values.
    * opengames - array: empty array, will be filled with JS.
    * finishedgames - array: empty array, will be filled with JS.
    * highscores - array: empty array, will be filled with JS.

    Example context (json):

    {
      "datafields": [
        {
          "key":"value"
        }
      ],
      "rowid": "allbookingoptionstable_r1",
      "rowclasses": "rowclasses",
        "leftside": {
            "invisibleoption": {
                "columnkeyclass": "d-none",
                "columnvalueclass": "booking-option-info-invisible"
            },
            "text": {
                "columnkeyclass": "d-none",
                "columnclass": "text-left m-0 mb-1 h5",
                "keystring": "Course name"
            },
            "action": {
                "columnkeyclass": "d-none",
                "columnclass": "text-right"
            },
            "teacher": {
                "columnkeyclass": "d-none",
                "columnclass": "text-left font-size-sm",
                "keystring": "Teacher(s)"
            },
            "statusdescription": {
                "columnkeyclass": "d-none"
            },
            "description": {
                "columnkeyclass": "d-none"
            }
        },
        "footer": {
            "bookings": {
                "columnkeyclass": "d-none",
                "columnclass": "text-left text-gray pr-2 font-size-sm",
                "columniclassbefore": "fa fa-ticket fa-fw text-gray\n            font-size-sm"
            },
            "minanswers": {
                "columnkeyclass": "d-none",
                "columnclass": "text-left text-gray pr-2 font-size-sm",
                "columniclassbefore": "fa fa-arrow-up fa-fw text-gray\n                font-size-sm"
            },
            "dayofweektime": {
                "columnkeyclass": "d-none",
                "columnclass": "text-left text-gray pr-2 font-size-sm",
                "columniclassbefore": "fa fa-clock-o fa-fw text-gray\n                font-size-sm"
            },
            "location": {
                "columnkeyclass": "d-none",
                "columnclass": "text-left text-gray  pr-2 font-size-sm",
                "columniclassbefore": "fa fa-map-marker fa-fw text-gray\n                font-size-sm"
            },
            "institution": {
                "columnkeyclass": "d-none",
                "columnclass": "text-left text-gray  pr-2 font-size-sm",
                "columniclassbefore": "fa fa-building-o fa-fw text-gray\n                font-size-sm"
            },
            "showdates": {
                "columnkeyclass": "d-none",
                "columnclass": "text-left pr-2 text-gray font-size-sm"
            },
            "comments": {
                "columnkeyclass": "d-none"
            }
        },
        "rightside": {
            "booknow": {
                "columnclass": "text-right"
            },
            "course": [],
            "progressbar": {
                "columnclass": "text-left mt-1 text-gray font-size-sm"
            },
            "ratings": {
                "columnclass": "mt-1"
            }
        }
    }

}}

<div class="card border py-1 px-3 sk-fade mb-2 flex-md-row align-items-center row gx-0" {{#datafields}} data-{{key}}="{{value}}" {{/datafields}}>
  <div class="content w-100">
    <div id="{{rowid}}" class="row {{rowclasses}}">
        <div class="col-md-9">
          {{#leftside}}
            {{#columnclass}}<div class="{{.}} {{key}}">{{/columnclass}}
              <span {{^value}} style="display:none" {{/value}}>
              {{#columniclassbefore}}
                <i class="{{.}}" aria-hidden="true"></i>
              {{/columniclassbefore}}
              </span>
              {{#columnkeyclass}}<span class="key {{.}}">{{/columnkeyclass}}
                {{^keystring}}
                {{{key}}}
              {{/keystring}}
              {{#keystring}}
                {{.}}
              {{/keystring}}:
              {{#columnkeyclass}}</span>{{/columnkeyclass}}
              <span {{^value}} style="display:none" {{/value}} class="{{columnvalueclass}} ">
                {{{value}}}
              </span>
              {{#columnvalueclass}}</span>{{/columnvalueclass}}
              <span {{^value}} style="display:none" {{/value}}>
              {{#columniclassafter}}
                <i class="value {{.}}" aria-hidden="true"></i>
              {{/columniclassafter}}
              </span>
            {{#columnclass}}</div>{{/columnclass}}
          {{/leftside}}
          <div class="d-block">
          {{#footer}}
            {{#columnclass}}<div class="d-inline {{.}} {{key}}">{{/columnclass}}
              <span {{^value}} style="display:none" {{/value}}>
              {{#columniclassbefore}}
                <i class="{{.}}" aria-hidden="true"></i>
              {{/columniclassbefore}}
              </span>
              {{#columnkeyclass}}<span class="key {{.}}">{{/columnkeyclass}}
                {{^keystring}}
                {{{key}}}
              {{/keystring}}
              {{#keystring}}
                {{.}}
              {{/keystring}}:
              {{#columnkeyclass}}</span>{{/columnkeyclass}}
              <span {{^value}} style="display:none" {{/value}} class="{{columnvalueclass}} ">
                {{{value}}}
              </span>
              {{#columnvalueclass}}</span>{{/columnvalueclass}}
              <span {{^value}} style="display:none" {{/value}}>
              {{#columniclassafter}}
                <i class="value {{.}}" aria-hidden="true"></i>
              {{/columniclassafter}}
              </span>
            {{#columnclass}}</div>{{/columnclass}}
          {{/footer}}
        </div>
      </div>
      <div class="col-md-3">
        <div class="h-100 d-flex" style=" justify-content: flex-end;
        flex-direction: column;">
        {{#rightside}}
          {{#columnclass}}<div class="{{.}} {{key}}">{{/columnclass}}
            <span {{^value}} style="display:none" {{/value}}>
            {{#columniclassbefore}}
              <i class="{{.}}" aria-hidden="true"></i>
            {{/columniclassbefore}}
            </span>
            <span {{^value}} style="display:none" {{/value}} class="{{columnvalueclass}} ">
              {{{value}}}
            </span>
            {{#columnvalueclass}}</span>{{/columnvalueclass}}
            <span {{^value}} style="display:none" {{/value}}>
            {{#columniclassafter}}
              <i class="value {{.}}" aria-hidden="true"></i>
            {{/columniclassafter}}
            </span>
          {{#columnclass}}</div>{{/columnclass}}
        {{/rightside}}
        </div>
      </div>
    </div>
  </div>
</div>