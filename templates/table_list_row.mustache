{{!
    @template mod_booking/table_list_row
    Template which defines a mooduell view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    * statistics - array: An array with values.
    * opengames - array: empty array, will be filled with JS.
    * finishedgames - array: empty array, will be filled with JS.
    * highscores - array: empty array, will be filled with JS.

    Example context (json):
    {
       "listheaderclass" : "listheaderclass",
       "cardheaderclass" : "cardheaderclass",
       "cardfooterclass" : "cardfooterclass",
       "cardimageclass" : "cardimageclass",
       "cardheader": [
            "columnclass" : "columnclass",
            "columnkeyclass" : "columnkeyclass",
            "key" : "columnname",
            "keystring" : "localized column name",
            "columnvalueclass" : "columnvalueclass"
            "value" : "value"
       ],
       "cardbody": [
            "columnclass" : "columnclass",
            "columnkeyclass" : "columnkeyclass",
            "key" : "columnname",
            "keystring" : "localized column name",
            "columnvalueclass" : "columnvalueclass"
            "value" : "value"
       ],
       "cardfooter": [
            "columnclass" : "columnclass",
            "columnkeyclass" : "columnkeyclass",
            "key" : "columnname",
            "keystring" : "localized column name",
            "columnvalueclass" : "columnvalueclass"
            "value" : "value"
       ],
       "cardimage": [
            "value" : "value"
       ]
    }
}}

<div class="card border py-1 px-3 sk-fade mb-2 flex-md-row align-items-center row gx-0" {{#datafields}} data-{{key}}="{{value}}" {{/datafields}}>
  <div class="content w-100">
    <div id="{{rowid}}" class="row {{rowclasses}}">
        <div class="col-md-9">
          {{#leftside}}
            {{#columnclass}}<div class="{{.}} {{key}}">{{/columnclass}}
              <span {{^value}} style="display:none" {{/value}}>
              {{#columniclassbefore}}
                <i class="{{.}}" aria-hidden="true"></i>
              {{/columniclassbefore}}
              </span>
              {{#columnkeyclass}}<span class="key {{.}}">{{/columnkeyclass}}
                {{^keystring}}
                {{{key}}}
              {{/keystring}}
              {{#keystring}}
                {{.}}
              {{/keystring}}:
              {{#columnkeyclass}}</span>{{/columnkeyclass}}
              <span {{^value}} style="display:none" {{/value}} class="{{columnvalueclass}} ">
                {{{value}}}
              </span>
              {{#columnvalueclass}}</span>{{/columnvalueclass}}
              <span {{^value}} style="display:none" {{/value}}>
              {{#columniclassafter}}
                <i class="value {{.}}" aria-hidden="true"></i>
              {{/columniclassafter}}
              </span>
            {{#columnclass}}</div>{{/columnclass}}
          {{/leftside}}
          <div class="d-block">
          {{#footer}}
            {{#columnclass}}<div class="d-inline {{.}} {{key}}">{{/columnclass}}
              <span {{^value}} style="display:none" {{/value}}>
              {{#columniclassbefore}}
                <i class="{{.}}" aria-hidden="true"></i>
              {{/columniclassbefore}}
              </span>
              {{#columnkeyclass}}<span class="key {{.}}">{{/columnkeyclass}}
                {{^keystring}}
                {{{key}}}
              {{/keystring}}
              {{#keystring}}
                {{.}}
              {{/keystring}}:
              {{#columnkeyclass}}</span>{{/columnkeyclass}}
              <span {{^value}} style="display:none" {{/value}} class="{{columnvalueclass}} ">
                {{{value}}}
              </span>
              {{#columnvalueclass}}</span>{{/columnvalueclass}}
              <span {{^value}} style="display:none" {{/value}}>
              {{#columniclassafter}}
                <i class="value {{.}}" aria-hidden="true"></i>
              {{/columniclassafter}}
              </span>
            {{#columnclass}}</div>{{/columnclass}}
          {{/footer}}
        </div>
      </div>
      <div class="col-md-3">
        <div class="h-100 d-flex" style=" justify-content: flex-end;
        flex-direction: column;">
        {{#rightside}}
          {{#columnclass}}<div class="{{.}} {{key}}">{{/columnclass}}
            <span {{^value}} style="display:none" {{/value}}>
            {{#columniclassbefore}}
              <i class="{{.}}" aria-hidden="true"></i>
            {{/columniclassbefore}}
            </span>
            <span {{^value}} style="display:none" {{/value}} class="{{columnvalueclass}} ">
              {{{value}}}
            </span>
            {{#columnvalueclass}}</span>{{/columnvalueclass}}
            <span {{^value}} style="display:none" {{/value}}>
            {{#columniclassafter}}
              <i class="value {{.}}" aria-hidden="true"></i>
            {{/columniclassafter}}
            </span>
          {{#columnclass}}</div>{{/columnclass}}
        {{/rightside}}
        </div>
      </div>
    </div>
  </div>
</div>