{{!
    @template mod_booking/bookingpage/prepagemodal

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region

    Example context (json):
    {
        "optionid": "3",
        "userid": "1212",
        "uniquid": "0UEEoHJkKhrK0QdG"
        "totalnumberofpages" : "3",
        "description": "<b>My Text</b>"
        "buttonhtml": "button HTML"
    }
}}
<div href="#" data-toggle="modal" data-target="#sbPrePageModal_{{optionid}}_{{uniquid}}">
    {{{buttonhtml}}}
</div>
<div class="modal fade" id="sbPrePageModal_{{optionid}}_{{uniquid}}" tabindex="-1" role="dialog"
    aria-labelledby="sbPrePageModalLabel" aria-hidden="true"
    data-uniquid="{{uniquid}}"
    data-optionid="{{optionid}}"
    data-pages="{{totalnumberofpages}}">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="modalHeader row"></div>
                <div class="modalMainContent row"></div>
                <div class="modalButtonAreaContainer row d-flex justify-content-center">
                    <div class="modalButtonArea w-25"></div>
                </div>
                <div class="modalFooter row"></div>
            </div>
        </div>
    </div>
</div>

{{#js}}
    require(['mod_booking/bookit'], function(init) {
    init.initprepagemodal({{optionid}}, {{userid}}, {{totalnumberofpages}}, '{{uniquid}}');
    });
{{/js}}