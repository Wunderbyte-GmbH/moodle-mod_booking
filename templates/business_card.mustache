{{!
    @template mod_booking/business_card

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region
}}

<div class='container' id='booking-business-card'>
    <div class='row'>
        <div class='col-1'>
            <img src="{{userpictureurl}}" alt="{{username}}" class='userpicture' style="max-width:100%;"></img>
        </div>
        <div class='col-11'>
            <p class="bold">
                {{#str}} organizatorname, mod_booking {{/str}}<br>
            </p>
            <p>
                <b><a href='{{userprofileurl}}' alt='{{username}}'>{{username}}</a></b><br>
                {{{userdescription}}}
            </p>
        </div>
    </div>
</div>
{{#description}}
    <div>
        <p>{{{description}}}</p>
    </div>
{{/description}}
{{#duration}}
    <div>
        <p><b>{{#str}} eventduration, mod_booking {{/str}}:</b> {{{duration}}}</p>
    </div>
{{/duration}}
{{#points}}
    <div>
        <p><b>{{#str}} eventpoints, mod_booking {{/str}}:</b> {{{points}}}</p>
    </div>
{{/points}}
