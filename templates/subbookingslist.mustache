{{!
    @template mod_booking/subbookingslist

    Classes required for JS:
    * none

    Example context (json):
    {
        "optionid": 3,
        "subbookings": {
            "id": 14,
            "name": "my name",
        }
    }
}}

<p>
    <div class="booking-subbookings-container">
        <div class="btn btn-success bookingsubbooking-button" data-action="add" data-id="0" data-optionid="{{optionid}}">
            <i class="fa fa-plus-square" aria-hidden="true"></i> {{#str}} bookingsubbookingadd, mod_booking {{/str}}
        </div>
        <ul class="mt-3 list-group booking-subbookings-list">
            {{#subbookings}}
            <li class="list-group-item">
                <div class="d-flex justify-content-between">
                    <h5>{{name}}</h5>
                    <div class="btn-group" role="group" aria-label="Booking subbooking buttons">
                        <div class="btn btn-sm btn-outline-danger bookingsubbooking-button" data-action="delete" data-id="{{id}}" data-name="{{name}}">
                            <i class="fa fa-trash" aria-hidden="true"></i> {{#str}} delete {{/str}}
                        </div>
                        <div class="btn btn-sm btn-outline-primary bookingsubbooking-button" data-action="edit" data-id="{{id}}" data-name="{{name}}">
                            <i class="fa fa-pencil" aria-hidden="true"></i> {{#str}} edit {{/str}}
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-sm-1 text-right">
                            <small><i class="fa fa-bolt" aria-hidden="true"></i></small>
                        </div>
                        <div class="col-sm-11">
                            <small>{{localizedsubbookingname}}</small>
                        </div>
                    </div>
                </div>
            </li>
            {{/subbookings}}
        <ul>
    </div>
</p>

{{#js}}
    require(['mod_booking/dynamicsubbookingsform'], function(init) {
    init.init(['div.bookingsubbooking-button']);
    });
{{/js}}