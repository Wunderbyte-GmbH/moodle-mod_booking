{{!
    @template mod_booking/info_modal

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region
}}

<a href="#" data-toggle="modal" data-target="#descriptionModal{{modalcounter}}">
    <i class="fa fa-info-circle fa-lg">
    </i>
</a>
<div class="modal fade" id="descriptionModal{{modalcounter}}" tabindex="-1" role="dialog" aria-labelledby="descriptionModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="descriptionModalLabel">{{modaltitle}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{> booking/bookingoption_description }}
      </div>
    </div>
  </div>
</div>