{{!
    @template mod_booking/enrollink

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region

     Example context (json):
    {
        "info" : "No more seats available",
        "error": 1,
        "courselink": "http://root/course/view.php?id=1234"
    }
}}

<div class="container text-center mt-5">
    {{#error}}
        <div class="alert alert-danger" role="alert">
    {{/error}}
    {{^error}}
        <div class="alert alert-success" role="alert">
    {{/error}}
            {{info}}
            {{#courselink}}
                <br>
                <a href="{{courselink}}">{{#str}} linktocourse, mod_booking {{/str}} </a>
            {{/courselink}}

            {{#bodetailslink}}
                <br>
                <a href="{{bodetailslink}}">{{#str}} linkgotobookingoption, mod_booking, {{namebookingoption}} {{/str}} </a>
            {{/bodetailslink}}
        </div>
</div>
