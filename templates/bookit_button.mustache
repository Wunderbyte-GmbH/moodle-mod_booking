{{!
    @template mod_booking/bookit

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region

     Example context (json):
    {
        'itemid' => 'btn btn-primary',
        'area' => 'btn btn-primary',
        'userid' => 'btn btn-primary',
        'main' => [
            'label' => 'mylabel',
            'class' => 'myclass',
            'role' => 'myrole',
        ],
        'top' => [
            'label' => 'mylabel',
            'class' => 'myclass',
            'role' => 'myrole',
        ],
        'sub' => [
            'label' => 'mylabel',
            'class' => 'myclass',
            'role' => 'myrole',
        ],
    }
}}
<div class="booking-button-area"
    data-itemid="{{itemid}}"
    data-area="{{area}}"
    data-userid="{{userid}}"
    {{#nojs}}
            data-nojs="1"
        {{/nojs}}>
    {{#top}}
        <div class="booking-button-toparea {{class}}" role="{{role}}">
            {{{label}}}
        </div>
    {{/top}}
    {{#main}}
        <div class="booking-button-mainarea {{class}}" role="{{role}}">
            {{{label}}}
        </div>
    {{/main}}
    {{#sub}}
        <div class="booking-button-subarea {{class}}" role="{{role}}">
            {{{label}}}
        </div>
    {{/sub}}
</div>

{{^nojs}}
    {{#js}}
        require(['mod_booking/bookit'], function(init) {
        init.initbookitbutton({{itemid}}, '{{area}}');
        });
    {{/js}}
{{/nojs}}