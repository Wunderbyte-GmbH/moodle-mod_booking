{{!
    @template mod_booking/subbooking/additionalitem

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-action
    * data-component
    * data-area
    * data-itemid

    Example context (json):
    {
        "items": [
            {
                "price": 30,
                "currency": "EUR",
                "name": "my item",
                "description": "more on my item"
            }
        ]
    }
}}
<ul class="list-group">
    {{#items}}

        <div class="list-group-item list-group-item">
            <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">{{name}}</h5>
            <small>{{price}} {{currency}}</small>
            </div>
            <p class="mb-1">
                <div class="d-flex w-100 justify-content-between">
                <span>
                    {{{description}}}
                </span>
                <span>
                    {{{button}}}
                </span>
                </div>
            </p>
        </div>
    {{/items}}
</ul>
{{^items}}
    <p>{{#str}} noitems, mod_booking {{/str}}</p>
{{/items}}
</div>

{{#js}}
    require(['mod_booking/bookit'], function(init) {
    init.initbookitbutton();
    });
    require(['local_shopping_cart/cart'], function(cart) {
        cart.buttoninit();
    });
{{/js}}