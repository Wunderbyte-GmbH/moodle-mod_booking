{{!
    @template mod_booking/bookingoption_changes

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region

    Example context (json):
    {
        "changes": [
            {
                "info":  "This is some general information about the changes.",
                "fieldname": "Custom Field 1",
                "oldname": "Old Custom Field Name",
                "newname": "New Custom Field Name",
                "oldvalue": "Old Custom Field Value",
                "newvalue": "New Custom Field Value"
            }
        ]
    }
}}

<table style="border:none">
    {{#changes}}
        {{#info}}
        <tr>
            <td colspan="3"><i>{{{.}}}</i></td>
        </tr>
        {{/info}}
        {{#fieldname}}
        <tr>
            <td><b>{{.}}: </b></td>
            <td>
                <div style="color: red;">
                    {{#oldvalue}}
                        <div>
                            {{#str}} changeold, mod_booking {{/str}}
                            <s>{{{.}}}</s>
                        </div>
                    {{/oldvalue}}
                </div>
                <div>
                    {{#newvalue}}
                        <div>
                            {{#str}} changenew, mod_booking {{/str}}
                            {{{.}}}
                        </div>
                    {{/newvalue}}
                </div>
            </td>
            <td></td>
        </tr>
        {{/fieldname}}
        <!-- Custom fields have no field name. -->
        {{^fieldname}}
        <tr>
            <td>
                <b>
                    {{#newname}}
                        {{#str}} changenew, mod_booking {{/str}}
                        {{.}}
                    {{/newname}}
                    {{#oldname}}
                        <div style="color: red;">
                            {{#str}} changeold, mod_booking {{/str}}
                            <s>{{.}}</s>
                        </div>
                    {{/oldname}}
                </b>
            </td>
            <td>
                <div style="color: red;">
                    {{#oldvalue}}
                        <div>
                            {{#str}} changeold, mod_booking {{/str}}
                            <s>{{{.}}}</s>
                        </div>
                    {{/oldvalue}}
                </div>
                <div>
                    {{#newvalue}}
                        <div>
                            {{#str}} changenew, mod_booking {{/str}}
                            {{{.}}}
                        </div>
                    {{/newvalue}}
                </div>
            </td>
            <td></td>
        </tr>
        {{/fieldname}}
    {{/changes}}
</table>
